<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".divdana.IncomeActivity"
    android:padding="14dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:background="@drawable/card_shape">

                <TextView
                    android:id="@+id/pagudana_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_shape2"
                    android:padding="8dp"
                    android:layout_marginBottom="14dp"
                    android:textAlignment="center"
                    android:textSize="15dip"
                    android:textColor="@android:color/white"
                    android:text="Jumlah Pagudana">
                </TextView>

                <TextView
                    android:id="@+id/jumdana_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginBottom="14dp"
                    android:textSize="15dip"
                    android:textColor="@android:color/white"
                    android:text="Rp. -">

                </TextView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:background="@drawable/card_shape">
                <TextView
                    android:id="@+id/tgl_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_shape2"
                    android:padding="8dp"
                    android:layout_marginBottom="18dp"
                    android:textAlignment="center"
                    android:textSize="15dip"
                    android:textColor="@android:color/white"
                    android:text="Tanggal Diterima">

                </TextView>

                <TextView
                    android:id="@+id/tglterima_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginBottom="18dp"
                    android:textSize="15dip"
                    android:textColor="@android:color/white"
                    android:text="-">

                </TextView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:background="@drawable/card_shape">

                <TextView
                    android:id="@+id/bukti_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_shape2"
                    android:padding="8dp"
                    android:layout_marginBottom="18dp"
                    android:textAlignment="center"
                    android:textSize="15dip"
                    android:textColor="@android:color/white"
                    android:text="Bukti Diterima">

                </TextView>

                <ImageView
                    android:id="@+id/buktiimg"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="18dp"
                    android:background="@android:drawable/picture_frame" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />
</RelativeLayout>