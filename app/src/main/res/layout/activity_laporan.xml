<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/background_gradient"
    tools:context=".divlaporan.laporanActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/card_shape">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/captsisa"
                android:layout_width="wrap_content"
                android:minWidth="350dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="left|top"
                android:text="Sisa Pagudana"
                android:textColor="@color/colorbackground"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sisadana_txt"
                android:layout_width="wrap_content"
                android:minWidth="350dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="right|top"
                android:text="Rp000"
                android:textColor="@color/colorbackground"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/card_shape">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_capt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_shape2"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/capt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pagudana"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorbackground"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/capt2"
                    android:layout_width="wrap_content"
                    android:minWidth="350dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/capt1"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="Kas"
                    android:textColor="@color/colorbackground" />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:minWidth="350dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/capt1"
                    android:layout_weight="1"
                    android:gravity="right|top"
                    android:text="Pengeluaran"
                    android:textColor="@color/colorbackground" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_isi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/ttl_dana_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp000"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorbackground"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ttl_kas_txt"
                    android:layout_width="wrap_content"
                    android:minWidth="350dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/outcome_name1"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:textSize="12sp"
                    android:text="Rp000"
                    android:textColor="@color/colorbackground" />
                <TextView
                    android:id="@+id/ttl_pengeluaran_txt"
                    android:layout_width="wrap_content"
                    android:minWidth="350dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/outcome_name1"
                    android:layout_weight="1"
                    android:gravity="right|top"
                    android:textSize="12sp"
                    android:text="Rp000"
                    android:textColor="@color/colorbackground" />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_shape">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_capt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_shape2"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/captpengeluaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Pengeluaran"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorbackground"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jumlahpeng"
                    android:layout_width="wrap_content"
                    android:minWidth="350dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/captpengeluaran"
                    android:layout_weight="1"
                    android:gravity="right|top"
                    android:text="Jumlah "
                    android:textColor="@color/colorbackground" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_isi3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/kegiatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kegiatan"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorbackground"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ttlkegiatan_txt"
                    android:layout_width="wrap_content"
                    android:minWidth="350dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/outcome_name1"
                    android:layout_weight="1"
                    android:gravity="right|top"
                    android:textSize="12sp"
                    android:text="Rp000"
                    android:textColor="@color/colorbackground" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_isi4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/aset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aset"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorbackground"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ttlaset_txt"
                    android:layout_width="wrap_content"
                    android:minWidth="350dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/outcome_name1"
                    android:layout_weight="1"
                    android:gravity="right|top"
                    android:textSize="12sp"
                    android:text="Rp000"
                    android:textColor="@color/colorbackground" />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_shape">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/captgraph"
                android:layout_width="wrap_content"
                android:minWidth="350dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="left|top"
                android:text="Grafik Ringkasan Pengeluaran"
                android:textColor="@color/colorbackground"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_shape">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/captlap"
                android:layout_width="wrap_content"
                android:minWidth="350dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="left|top"
                android:text="CETAK DATA TABEL KE EXCEL"
                android:textColor="@color/colorbackground"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/pilihtabel"
                android:layout_width="wrap_content"
                android:minWidth="350dp"
                android:layout_below="@+id/captlap"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:gravity="left|top"
                android:text="Pilih Tabel Yang Ingin Dicetak"
                android:textColor="@color/colorbackground"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/pilTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pilihtabel"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/cetak_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/pilTab"
                android:text="Cetak"
                android:textColor="@color/colorbackground"
                android:textSize="12dp"
                android:background="@color/colorAccent"/>

        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>